NET:MAKE=nmake
MONO:MAKE=make

clean-build:
	$(MAKE) clean
	$(MAKE) all

all:
MONO:	cd tools; make
MONO:	cd a2c; make
MONO:	cd runtime/C; make
NET:	cd tools
NET:	nmake
NET:	cd ..\a2c
NET:	nmake
NET:	cd ..\runtime\C
NET:	nmake

clean:
	cd tools
	$(MAKE) clean
NET:	cd ..\a2c
MONO:	cd ../a2c
	$(MAKE) clean
NET:	cd ..\runtime\C
MONO:	cd ../runtime/C
	$(MAKE) clean

